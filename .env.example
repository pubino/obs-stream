# Environment variables for OBS Docker setup
# Copy this to .env and modify as needed

# VNC ports for the instance
VNC_PORT=5901

# NoVNC web port for the instance (web-based VNC access)
NOVNC_PORT=6081

# OBS WebSocket password (optional, leave empty for no auth)
OBS_WS_PASSWORD=

# OBS WebSocket port for the instance
OBS_WS_PORT=4455

# OBS Video Configuration (optional - defaults provided)
# Base (Canvas) Resolution
OBS_BASE_WIDTH=1920
OBS_BASE_HEIGHT=1080

# Output (Scaled) Resolution
OBS_OUTPUT_WIDTH=1920
OBS_OUTPUT_HEIGHT=1080

# Video scaling method: bilinear, bicubic, lanczos, area
OBS_SCALE_TYPE=bicubic

# Color format: NV12, I420, I444, RGB
OBS_COLOR_FORMAT=NV12

# Color space: 601, 709
OBS_COLOR_SPACE=709

# Color range: Full, Partial
OBS_COLOR_RANGE=Partial

# FPS settings
OBS_FPS_COMMON=30
OBS_FPS_INT=30